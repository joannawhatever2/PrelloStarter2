@model Client
@{
    ViewData["Title"] = "Edit";
}

<h1 class="custom-text">Add New Project</h1>

<div class="border container" style="padding:30px;">
    <form method="post" asp-action="Edit">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row mb-2">
            <div class="col-3">
                <label asp-for="ClientName"></label>
            </div>
            <div class="col-6">
                <input type="text" asp-for="ClientName" class="form-control" />
            </div>
            <span asp-validation-for="ClientName" class="text-danger"></span>
        </div>
        <div class="form-group row mb-2">
            <div class="col-3">
                <label asp-for="EmailAddress"></label>
            </div>
            <div class="col-6">
                <input type="text" asp-for="EmailAddress" class="form-control" />
            </div>
            <span asp-validation-for="EmailAddress" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Create" class="btn btn-info form-control" />
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-secondary form-control">Back to Projects List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


