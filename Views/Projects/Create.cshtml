@model Project
@{
    ViewData["Title"] = "Create";
}

<br />
<h1 class="custom-text">Add New Project</h1>
<br />

<div class="border container" style="padding:30px;">
    <form method="post" asp-action="Create">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row mb-2">
            <div class="col-3">
                <label asp-for="ProjectName"></label>
            </div>
            <div class="col-6">
                <input type="text" asp-for="ProjectName" class="form-control" />
            </div>
            <span asp-validation-for="ProjectName" class="text-danger"></span>
        </div>
        <div class="form-group row mb-2">
            <div class="col-3">
                <label asp-for="Description"></label>
            </div>
            <div class="col-6">
                <input type="text" asp-for="Description" class="form-control" />
            </div>
        </div>
        <div class="form-group row mb-2">
            <div class="col-3">
                <label asp-for="Status"></label>
            </div>
            <select class="col-6" asp-for="Status">
                <option value="">Select a status</option>
                <option value="Not Started"> Not Started </option>
                <option value="In Progress">In Progress </option>
                <option value="Complete">Complete</option>
            </select>
            <span asp-validation-for="Status" class=" text-danger"></span>
        </div>
        <div class="form-group row mb-2">
            <div class="col-3">
                <label asp-for="DateDue" ></label>
            </div>
            <div class="col-6">
                <input type="datetime-local" asp-for="DateDue" class="form-control" />
            </div>
            <span asp-validation-for="DateDue" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Create" class="btn btn-info form-control" />
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-secondary form-control">Back to Projects List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


